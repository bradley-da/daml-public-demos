module Loans where

template Loan with
    lender : Party
    borrower : Party
    amount : Decimal
    rate : Decimal
    created : Time
  where
    signatory lender
  
    choice Amend : ContractId Loan
      with
        newAmount : Decimal
        newRate : Decimal
      controller lender
      do create this with
          amount = newAmount
          rate = newRate
